<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".signupEmail"
    tools:showIn="@layout/activity_login"
    android:background="@drawable/bckg_2">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/whitenotagline"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="51dp" />

    <EditText
    android:layout_width="300dp"
    android:layout_height="40dp"
    android:id="@+id/emailField"
    android:gravity="center"
    android:inputType="textEmailAddress"
    android:hint="Email"
    android:textColorHint="#ffffff"
    android:textColor="#ffffff"
    android:background="@drawable/mybutton2"
    android:layout_centerVertical="true"
    android:layout_alignLeft="@+id/passwordField"
    android:layout_alignStart="@+id/passwordField" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:id="@+id/userNameField"
        android:gravity="center"
        android:inputType="text"
        android:layout_below="@id/emailField"
        android:hint="Username"
        android:layout_marginTop="20dp"
        android:textColorHint="#ffffff"
        android:textColor="#ffffff"
        android:background="@drawable/mybutton2"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/passwordField"
        android:layout_alignStart="@+id/passwordField" />
    <EditText
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:inputType="textPassword"
        android:id="@+id/passwordField"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:hint="Password"
        android:textColorHint="#ffffff"
        android:textColor="#ffffff"
        android:background="@drawable/mybutton2"
        android:layout_below="@+id/userNameField"
        android:layout_alignLeft="@+id/passwordFieldCheck"
        android:layout_alignStart="@+id/passwordFieldCheck" />
    <EditText
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:id="@+id/passwordFieldCheck"
        android:inputType="textPassword"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:hint="Password Again"
        android:textColorHint="#ffffff"
        android:textColor="#ffffff"
        android:background="@drawable/mybutton2"
        android:layout_below="@+id/passwordField"
        android:layout_centerHorizontal="true" />



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:id="@+id/signUp"
        android:background="@drawable/mybutton"
        android:layout_below="@+id/passwordFieldCheck"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/goBackPic"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/signUp"
        android:layout_toStartOf="@+id/signUp"
        android:src="@drawable/backtosignin"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show password"
        android:id="@+id/shwoPW"
        android:hapticFeedbackEnabled="true"

        android:checked="false"
        android:textSize="13sp"
        android:layout_alignBottom="@+id/signUp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
