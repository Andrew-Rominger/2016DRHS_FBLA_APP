<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="fbla.com.fbla_app_src.accountsettings"
    tools:showIn="@layout/activity_accountsettings">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight=".075"
            android:background="#EA6C55">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="settings"
                android:id="@+id/settingstextview"
                android:layout_gravity="center"
                android:textColor="#fff"
                android:textSize="35sp" />

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:id="@+id/imageView11"
                android:layout_gravity="left|center_vertical"
                android:src="@drawable/movebackarrowtwo"
                android:soundEffectsEnabled="false"
                android:layout_marginLeft="20dp" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".05"
            android:background="#C2C6C1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Account"
                android:id="@+id/textView7"
                android:layout_gravity="left|center_vertical"
                android:textColor="#fff"
                android:textSize="20sp"
                android:layout_marginLeft="5dp" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".05"
            android:background="@drawable/customborder">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit Profile"
                android:id="@+id/editprofile"
                android:layout_gravity="left|center_vertical"
                android:layout_marginLeft="5dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/editprofilearrow"
                android:layout_gravity="right|center_vertical"
                android:isScrollContainer="false"
                android:src="@drawable/orangearrowtwo"
                android:soundEffectsEnabled="false"
                android:layout_marginRight="10dp" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".05">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Change Password"
                android:id="@+id/changepasswordtextview"
                android:layout_gravity="left|center_vertical"
                android:layout_marginLeft="5dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView8"
                android:layout_gravity="right|center_vertical"
                android:isScrollContainer="false"
                android:src="@drawable/orangearrowtwo"
                android:soundEffectsEnabled="false"
                android:layout_marginRight="10dp" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".05"
            android:background="#C2C6C1"
            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="About"
                android:id="@+id/abouttextview"
                android:layout_gravity="left|center_vertical"
                android:textColor="#fff"
                android:textSize="20sp"
                android:layout_marginLeft="5dp" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".05">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Private Policy"
                android:id="@+id/textView10"
                android:layout_gravity="left|center_vertical"
                android:layout_marginLeft="5dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView10"
                android:layout_gravity="right|center_vertical"
                android:isScrollContainer="false"
                android:src="@drawable/orangearrowtwo"
                android:soundEffectsEnabled="false"
                android:layout_marginRight="10dp" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".05"
            android:background="@drawable/customborder" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Terms"
                android:id="@+id/textView9"
                android:layout_gravity="left|center_vertical"
                android:layout_marginLeft="5dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView9"
                android:layout_gravity="right|center_vertical"
                android:isScrollContainer="false"
                android:src="@drawable/orangearrowtwo"
                android:soundEffectsEnabled="false"
                android:layout_marginRight="10dp" />
        </FrameLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".3">

            <Button
                android:layout_width="265dp"
                android:layout_height="35dp"
                android:text="Delete Account"
                android:textColor="#ffffff"
                android:textAppearance="@style/TextAppearance.FontPath"
                android:textSize="20sp"
                android:id="@+id/deleteaccount"
                android:textAllCaps="false"
                android:background="@drawable/mybutton"
                android:layout_below="@+id/spaceview"
                android:layout_alignLeft="@+id/logoutbutton"
                android:layout_alignStart="@+id/logoutbutton" />

            <Button
                android:layout_width="265dp"
                android:layout_height="35dp"
                android:text="Log Out"
                android:textColor="#ffffff"
                android:textAppearance="@style/TextAppearance.FontPath"
                android:textSize="20sp"
                android:id="@+id/logoutbutton"
                android:textAllCaps="false"
                android:background="@drawable/mybutton"
                android:layout_above="@+id/spaceview"
                android:layout_centerHorizontal="true" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="20dp"
                android:id="@+id/spaceview"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>
